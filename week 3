//int main (){
    bool caseInsensitiveCompare(const string& str1, const string& str2){
        if(str1.length() != str2length()){
            return false;
        }
    }
    for (size_t i = 0; i < str1.length()); i++){
    if(tolower(str1[1]) != tollower(str2[i])){
        return false;
    }
        
    }
    return true;
}
int main(){
