#include <iostream>
using namespace std;
class Interger{
    private:
        int value; // actual int value we will wrap
        
    public:
    //constructor
        Interger(int val = 0){
            value = val;
        }
        // getter to read stored value
        int getvalue()const{
            return value;
        }
        // overload the binary + operator to add the interger objects
        //ex. Interget c=a+b
        
        Interger operator+(const Interger& other) const{
            return Interger(this->value + other.value);
            
        }
};
// main.cpp


int main(){
    Interger numb1(19);
    Interger numb2(20);
    // call numb1.operator(numb2)
    Interger sum = numb1 + numb2;
    cout << "Numb 1 is : " << numb1.getvalue() << endl;
    cout << "Numb 2 is: " << numb2.getvalue() <<endl;
    
    cout << "Sum(numb1 + numb2): " << sum.getvalue() << endl;
}
