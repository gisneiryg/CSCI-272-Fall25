#include <iostream>
using namespace std;

class Person{
  private:
    string name{"John Doe"};
    int age{30};
    char gender {'M'};

  public:
    void introduce(){
      cout << "I am " << name << ". Age " << age;
      if (gender == 'M'){
      cout << "I identify as a male" << endl ;
    }
      else if(gender == 'F'){
      cout << "I identify as female" << endl;
    }
      else{
        cout << "Gender not specified" << endl ;
      }
  }
}

